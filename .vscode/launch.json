    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch (listen)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "env": {},
            "args": ["listen", "--log-level", "debug"]
        },
        {
            "name": "Run tests for current package",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${fileDirname}",
            "args": ["-test.v"]
        }
    ]
}
